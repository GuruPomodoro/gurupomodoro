<% provide(:title, "Interrupt") %>
<div class="container text-center text-dark bg-light">
  <h1>Oh no!</h1>
    <p><font size=5>You left early, what is wrong?</font></p>

  <div id="textarea1">
    <%= form_tag(pomodoro_submit_interrupt_path) do %>
      <%= text_area_tag :reason, "", rows:"6", cols:"50", placeholder:"Enter your reason here" %>
      <br>
      <%= submit_tag 'SUBMIT', class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>
